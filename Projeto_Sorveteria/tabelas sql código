CREATE TABLE Sorvete(

    Id BIGINT PRIMARY KEY AUTO_INCREMENT,
    Recipiente_id BIGINT FOREIGN KEY REFERENCES Recipiente(Id)
    

);

CREATE TABLE Recipiente(

	Id BIGINT PRIMARY KEY AUTO_INCREMENT,
	Nome VARCHAR(100),
	Preco DOUBLE
);


CREATE TABLE Sorvete_adicional(

	Id BIGINT PRIMARY KEY AUTO_INCREMENT,
    Sorvete_id BIGINT FOREIGN KEY REFERENCES Sorvete(Id),
    Adicional_id BIGINT FOREIGN KEY REFERENCES Adicional(Id),
    Quantidade BIGINT,
    UNIQUE (Sorvete_id,Adicional_id)



);

CREATE TABLE Adicional(

	Id BIGINT PRIMARY KEY AUTO_INCREMENT,
	Nome VARCHAR(100),
	Preco DOUBLE

);



CREATE TABLE Sorvete_bola(

	Id BIGINT PRIMARY KEY AUTO_INCREMENT,
    Sorvete_id BIGINT FOREIGN KEY REFERENCES Sorvete(Id),
    Bola_id BIGINT FOREIGN KEY REFERENCES Bola(Id),
    Quantidade BIGINT,
	UNIQUE (Sorvete_id,Bola_id)

);

CREATE TABLE Bola(

	Id BIGINT PRIMARY KEY AUTO_INCREMENT,
	Sabor_id BIGINT FOREIGN KEY REFERENCES Sabor(Id)
    


);

CREATE TABLE Sabor(


	Id BIGINT PRIMARY KEY AUTO_INCREMENT,
    Nome VARCHAR(100),
    Categoria ENUM('PICOLÃ‰','PRODUTO_COMPOSTO'),
	Preco DOUBLE

);

CREATE TABLE Milkshake(

	Id BIGINT PRIMARY KEY AUTO_INCREMENT,
    Tamanho_id BIGINT FOREIGN KEY REFERENCES Tamanho(Id),


);

CREATE TABLE Tamanho(

	Id BIGINT PRIMARY KEY AUTO_INCREMENT,
	Mililitros BIGINT,
    Preco DOUBLE

);

CREATE TABLE Milkshake_bola(

    Id BIGINT PRIMARY KEY AUTO_INCREMENT,
    Milkshake_id BIGINT FOREIGN KEY REFERENCES Milkshake(Id),
    Bola_id BIGINT FOREIGN KEY REFERENCES Bola(Id),
    Quantidade BIGINT,
	UNIQUE (Milkshake_id,Bola_id)


);

CREATE TABLE Picole(

	Id BIGINT PRIMARY KEY AUTO_INCREMENT,
    Tipo ENUM('NATURAL','ESPECIAL'),
    Sabor_id BIGINT FOREIGN KEY REFERENCES Sabor(Id),

);










CREATE TABLE Pedido(

	Id BIGINT PRIMARY KEY AUTO_INCREMENT,
	Data_ DATETIME,
    Cliente VARCHAR(100),
    Forma_de_pagamento VARCHAR(100),
    Preco_total DOUBLE


);

CREATE TABLE Pedido_delivery(

	Id BIGINT PRIMARY KEY AUTO_INCREMENT,
    Pedido_id BIGINT FOREIGN KEY REFERENCES Pedido(Id),
    Endereco VARCHAR(100),
	Frete DOUBLE


);


CREATE TABLE Pedido_fisico(

	Id BIGINT PRIMARY KEY AUTO_INCREMENT,
    Pedido_id BIGINT FOREIGN KEY REFERENCES Pedido(Id),
    Gorjeta DOUBLE




)


CREATE TABLE Pedido_sorvete(

    Id BIGINT PRIMARY KEY AUTO_INCREMENT,
    Pedido_id BIGINT FOREIGN KEY REFERENCES Pedido(Id),
    Sorvete_id BIGINT FOREIGN KEY REFERENCES Sorvete(Id),
    Quantidade BIGINT,
	UNIQUE (Pedido_id,Sorvete_id)


);

CREATE TABLE Pedido_milkshake(

    Id BIGINT PRIMARY KEY AUTO_INCREMENT,
    Pedido_id BIGINT FOREIGN KEY REFERENCES Pedido(Id),
    Milkshake_id BIGINT FOREIGN KEY REFERENCES Milkshake(Id),
    Quantidade BIGINT,
	UNIQUE (Pedido_id,Milkshake_id)


);

CREATE TABLE Pedido_picole(

    Id BIGINT PRIMARY KEY AUTO_INCREMENT,
    Pedido_id BIGINT FOREIGN KEY REFERENCES Pedido(Id),
    Picole_id BIGINT FOREIGN KEY REFERENCES Picole(Id),
    Quantidade BIGINT,
	UNIQUE (Pedido_id,Picole_id)

);





















CREATE TABLE Garcom(

	Id BIGINT PRIMARY KEY AUTO_INCREMENT,
	Nome VARCHAR(100),
    Nascimento DATE,
    CPF VARCHAR(100),
	Telefone BIGINT,
    Salario DOUBLE
);



CREATE TABLE Entregador(

	Id BIGINT PRIMARY KEY AUTO_INCREMENT,
	Nome VARCHAR(100),
    Nascimento DATE,
    CPF VARCHAR(100),
	Telefone BIGINT,
    Salario DOUBLE

);



CREATE TABLE Gerente(

	Id BIGINT PRIMARY KEY AUTO_INCREMENT,
	Nome VARCHAR(100),
    Nascimento DATE,
    CPF VARCHAR(100),
	Telefone BIGINT,
    Salario DOUBLE

);



CREATE TABLE Garcom_pedido(

	Id BIGINT PRIMARY KEY AUTO_INCREMENT,
    Garcom_id BIGINT FOREIGN KEY REFERENCES Garcom(Id),
    Pedido_id BIGINT FOREIGN KEY REFERENCES Pedido(Id)
    
);


CREATE TABLE Entregador_pedido(

Id BIGINT PRIMARY KEY AUTO_INCREMENT,
Entregador_id BIGINT FOREIGN KEY REFERENCES Entregador(Id),
    Pedido_id BIGINT FOREIGN KEY REFERENCES Pedido(Id)
    

);
